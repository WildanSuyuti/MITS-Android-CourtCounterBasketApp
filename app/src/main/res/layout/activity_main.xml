<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/street_basketball"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mits.kakaroto.courtcounterbasketapp.MainActivity">

    <TextView
        android:id="@+id/tv_firstAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT SCORE"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />

    <ImageView
        android:id="@+id/img_garis"
        android:src="@drawable/garis_vertikal"
        android:layout_below="@id/tv_firstAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/tv_lblResultScoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM A"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryLight"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/tv_firstAuthor"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/tv_resultScoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/tv_lblResultScoreA"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"

        />

    <TextView
        android:id="@+id/tv_lblResultScoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM B"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryLight"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/tv_firstAuthor"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        />

    <TextView
        android:id="@+id/tv_resultScoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textAlignment="center"
        android:layout_below="@+id/tv_lblResultScoreB"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <Button
        android:onClick="submitStart"
        android:id="@+id/btn_courtCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START COURT COUNT"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/img_garis"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:textColor="@color/colorPrimaryLight"
        android:background="@color/colorAccent"
        />

    <Button
        android:onClick="submitExit"
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryLight"
        android:layout_below="@+id/btn_courtCount"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorAccent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        />


</RelativeLayout>
