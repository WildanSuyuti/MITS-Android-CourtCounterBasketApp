<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mits.kakaroto.courtcounterbasketapp.MainActivity">

    <ImageView
        android:id="@+id/img_Garis"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/garis_vertikal"
        android:layout_centerHorizontal="true"
        android:paddingLeft="110dp"
        android:paddingRight="110dp"
        />

    <TextView
        android:id="@+id/tv_teamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="casual"
        />

    <TextView
        android:id="@+id/tv_teamB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:fontFamily="casual"
        android:paddingRight="2dp"
        />

    <TextView
        android:id="@+id/tv_scoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_teamA"
        android:text="0"
        android:textSize="80sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_scoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_teamB"
        android:text="0"
        android:textSize="80sp"
        android:paddingLeft="35dp"
        android:paddingRight="40dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        />

    <Button
        android:onClick="submitTwoPointA"
        android:id="@+id/btn_twoPointA"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="2 POINT SHOOT"
        android:textSize="15sp"
        android:layout_below="@+id/tv_scoreA"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        />

    <Button
        android:onClick="submitThreePointA"
        android:id="@+id/btn_threePointA"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="3 POINT SHOOT"
        android:textSize="15sp"
        android:layout_below="@+id/btn_twoPointA"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        />

    <Button
        android:onClick="submitFreeThrowA"
        android:id="@+id/btn_freeThrowA"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:textSize="15sp"
        android:layout_below="@+id/btn_threePointA"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"

        />

    <Button
        android:onClick="submitTwoPointB"
        android:id="@+id/btn_twoPointB"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="2 POINT SHOOT"
        android:textSize="15sp"
        android:layout_below="@+id/tv_scoreB"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"

        />

    <Button
        android:onClick="submitThreePointB"
        android:id="@+id/btn_threePointB"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="3 POINT SHOOT"
        android:textSize="15sp"
        android:layout_below="@+id/btn_twoPointB"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        />

    <Button
        android:onClick="submitFreeThrowB"
        android:id="@+id/btn_freeThrowB"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="FREE THROW"
        android:textSize="15sp"
        android:layout_below="@+id/btn_threePointB"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        />

    <Button
        android:onClick="submitEnd"
        android:id="@+id/btn_end"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_freeThrowA"
        android:text="End"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="65dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        />

    <Button
        android:onClick="submitReset"
        android:id="@+id/btn_reset"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_freeThrowB"
        android:text="Reset"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIcons"
        android:background="@color/colorPrimary"
        android:layout_alignLeft="@+id/btn_freeThrowB"
        />

</RelativeLayout>
