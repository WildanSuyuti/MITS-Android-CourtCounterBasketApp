<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mits.kakaroto.courtcounterbasketapp.ResultActivity">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result For Team A and Team B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <TextView
        android:layout_below="@+id/tv_judul"
        android:id="@+id/tv_lblResultScoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A : "
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_below="@+id/tv_judul"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_resultScoreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result A"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        />

    <TextView
        android:layout_below="@+id/tv_lblResultScoreA"
        android:id="@+id/tv_lblResultScoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team B : "
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_below="@+id/tv_lblResultScoreA"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_resultScoreB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result B"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        />

</RelativeLayout>
